{
  "name": "shop-republik-ch",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm run gql:types --watch\" \"panda --watch\"",
    "build": "panda && pnpm run gql:types && next build",
    "prepare": "panda codegen",
    "start": "next start",
    "lint": "next lint",
    "gql:types": "graphql-codegen --config graphql/configs/codegen-dev.ts",
    "test": "NODE_ENV=test playwright test --project 'Mobile Chrome'",
    "test:generate": "pnpm exec playwright codegen ",
    "yaproxy:staging": "CORS_ORIGIN=http://localhost:3000 PORT=5010 TARGET=https://api.republik.love yaproxy"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@sentry/nextjs": "^9.14.0",
    "@stripe/react-stripe-js": "^3.6.0",
    "@stripe/stripe-js": "^7.2.0",
    "@urql/core": "^5.1.1",
    "graphql": "^16.11.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.488.0",
    "next": "^15.3.1",
    "next-intl": "^4.1.0",
    "next-plausible": "^3.12.4",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.1",
    "set-cookie-parser": "^2.7.1",
    "sonner": "^2.0.3",
    "stripe": "^18.0.0",
    "urql": "^4.2.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@next/env": "^15.3.1",
    "@pandacss/dev": "^0.53.6",
    "@parcel/watcher": "^2.5.1",
    "@playwright/test": "^1.52.0",
    "@types/imapflow": "^1.0.20",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/set-cookie-parser": "^2.4.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "eslint-config-next": "^15.3.1",
    "imapflow": "^1.0.186",
    "nanoid": "^5.1.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "yaproxy": "^1.0.2"
  }
}
