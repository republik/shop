{
  "name": "shop-republik-ch",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22",
    "pnpm": "9"
  },
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm run gql:types --watch\" \"panda --watch\"",
    "build": "panda && pnpm run gql:types && next build",
    "prepare": "panda codegen",
    "start": "next start",
    "lint": "next lint",
    "gql:types": "graphql-codegen --config graphql/configs/codegen-dev.ts",
    "test": "pnpm exec playwright test --project 'Mobile Chrome'",
    "test:generate": "pnpm exec playwright codegen ",
    "yaproxy:staging": "CORS_ORIGIN=http://localhost:3000 PORT=5010 TARGET=https://api.republik.love yaproxy"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@sentry/nextjs": "^8.48.0",
    "@stripe/react-stripe-js": "^3.1.1",
    "@stripe/stripe-js": "^5.5.0",
    "@urql/core": "^5.1.0",
    "graphql": "^16.10.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.468.0",
    "next": "^15.1.4",
    "next-intl": "^3.26.3",
    "next-plausible": "^3.12.4",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "set-cookie-parser": "^2.7.1",
    "sonner": "^1.7.1",
    "stripe": "^17.5.0",
    "urql": "^4.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@next/env": "^15.1.4",
    "@pandacss/dev": "^0.48.1",
    "@parcel/watcher": "^2.5.0",
    "@playwright/test": "^1.49.1",
    "@types/imapflow": "^1.0.19",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/set-cookie-parser": "^2.4.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.4",
    "imapflow": "^1.0.174",
    "nanoid": "^5.0.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "yaproxy": "^1.0.2"
  }
}
