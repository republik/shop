{
  "name": "shop-republik-ch",
  "version": "0.1.0",
  "private": true,
  "license": "BSD-3-Clause",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm run gql:types --watch\" \"panda --watch\"",
    "build": "panda && pnpm run gql:types && next build",
    "prepare": "panda codegen",
    "start": "next start",
    "lint": "next lint",
    "gql:types": "graphql-codegen --config graphql/configs/codegen-dev.ts",
    "test": "NODE_ENV=test playwright test --project 'Mobile Chrome'",
    "test:generate": "pnpm exec playwright codegen ",
    "yaproxy:staging": "CORS_ORIGIN=http://localhost:3000 PORT=5010 TARGET=https://api.republik.love yaproxy",
    "knip": "knip"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@sentry/nextjs": "^10.37.0",
    "@stripe/react-stripe-js": "^5.5.0",
    "@stripe/stripe-js": "^8.6.4",
    "@urql/core": "^6.0.1",
    "graphql": "^16.12.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.542.0",
    "next": "^15.5.10",
    "next-intl": "^4.7.0",
    "next-plausible": "^3.12.5",
    "next-themes": "^0.4.6",
    "qr": "^0.5.4",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "urql": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@next/env": "^15.5.10",
    "@pandacss/dev": "^1.8.1",
    "@parcel/watcher": "^2.5.6",
    "@playwright/test": "^1.58.0",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.10",
    "imapflow": "^1.2.7",
    "knip": "^5.82.1",
    "nanoid": "^5.1.6",
    "typescript": "^5.9.3",
    "yaproxy": "^1.0.2"
  }
}
